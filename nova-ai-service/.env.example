# ==================== 服务配置 ====================
SERVICE_NAME=nova-ai-service
HOST=0.0.0.0
PORT=8001
DEBUG=False

# ==================== Gemini 配置 ====================
# Gemini API 密钥（必需）
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini 代理服务器（可选，用于绕过地区限制）
# 支持 HTTP/HTTPS/SOCKS5 代理
# 例如: http://127.0.0.1:40000
GEMINI_PROXY=http://127.0.0.1:40000

# Gemini 模型名称
GEMINI_MODEL=gemini-2.0-flash-exp

# Gemini 请求超时时间（毫秒）
GEMINI_TIMEOUT_MS=300000

# ==================== Claude 配置（预留）====================
# Claude API 密钥（可选）
# CLAUDE_API_KEY=your_claude_api_key_here

# Claude 模型名称
# CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ==================== OpenAI 配置（预留）====================
# OpenAI API 密钥（可选）
# OPENAI_API_KEY=your_openai_api_key_here

# OpenAI 模型名称
# OPENAI_MODEL=gpt-4

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志格式
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==================== CORS 配置 ====================
# 允许的源（生产环境应该设置具体的域名，开发环境可以使用 * ）
# 多个源用逗号分隔，例如: http://localhost:3000,http://localhost:8080
CORS_ORIGINS=*

# 是否允许携带凭证
CORS_ALLOW_CREDENTIALS=True

# 允许的 HTTP 方法
CORS_ALLOW_METHODS=*

# 允许的 HTTP 头
CORS_ALLOW_HEADERS=*
