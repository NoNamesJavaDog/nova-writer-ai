# ==================== Service configuration ====================
SERVICE_NAME=nova-ai-service
HOST=0.0.0.0
PORT=8001
DEBUG=False
DEFAULT_AI_PROVIDER=gemini

# ==================== Gemini configuration ====================
# Gemini API key (required)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional proxy for Gemini (used when Gemini is blocked)
GEMINI_PROXY=http://127.0.0.1:40000
# Gemini model name
GEMINI_MODEL=gemini-2.0-flash-exp
# Request timeout in milliseconds
GEMINI_TIMEOUT_MS=300000

# ==================== DeepSeek configuration ====================
# DeepSeek API key (required when using the DeepSeek provider)
DEEPSEEK_API_KEY=sk-f7dc92c468cd4bd28b36b983923bb52d

# Base URL for DeepSeek (without trailing slash)
DEEPSEEK_BASE_URL=https://api.deepseek.com
# Optional proxy if DeepSeek is blocked
DEEPSEEK_PROXY=
# DeepSeek model to call (e.g., deepseek-reasoner, deepseek-chat)
DEEPSEEK_MODEL=deepseek-reasoner
# Request timeout in milliseconds
DEEPSEEK_TIMEOUT_MS=300000

# ==================== Claude configuration (placeholder) ====================
# CLAUDE_API_KEY=your_claude_api_key_here
# CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ==================== OpenAI configuration (placeholder) ====================
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==================== CORS ====================
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
