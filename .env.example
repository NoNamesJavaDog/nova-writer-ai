# ==============================================================================
# NovaWrite AI - Unified Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values
# All services read from this single .env file via docker-compose
# ==============================================================================

# ==================== Database ====================
DATABASE_URL=postgresql://postgres:novawrite_db_2024@postgres:5432/novawrite_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=novawrite_db_2024
POSTGRES_DB=novawrite_ai

# ==================== Neo4j Graph Database ====================
NEO4J_ENABLED=true
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_2026

# ==================== JWT Authentication ====================
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== Environment ====================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ==================== Gemini API ====================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_PROXY=
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TIMEOUT_MS=300000

# ==================== DeepSeek API ====================
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_PROXY=
DEEPSEEK_MODEL=deepseek-reasoner
DEEPSEEK_TIMEOUT_MS=300000

# ==================== Claude API (optional) ====================
# CLAUDE_API_KEY=your-claude-api-key-here
# CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ==================== OpenAI API (optional) ====================
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4

# ==================== AI Service Settings ====================
DEFAULT_AI_PROVIDER=gemini
AI_SERVICE_URL=http://ai-service:8001
AI_SERVICE_TIMEOUT=300
AI_SERVICE_PROVIDER=gemini

# ==================== CORS ====================
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# ==================== Frontend ====================
VITE_API_BASE_URL=http://localhost:8000
