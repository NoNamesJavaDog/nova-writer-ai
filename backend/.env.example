# ==================== 数据库配置 ====================
DATABASE_URL=postgresql://postgres:novawrite_db_2024@localhost:5432/novawrite_ai

# ==================== JWT 认证配置 ====================
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== 服务器配置 ====================
HOST=0.0.0.0
PORT=8000

# ==================== CORS 配置 ====================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://66.154.108.62,http://66.154.108.62

# ==================== Gemini API 配置 ====================
GEMINI_API_KEY=your-gemini-api-key-here
# WARP 代理地址（Cloudflare WARP HTTP 代理默认端口是 40000）
GEMINI_PROXY=http://127.0.0.1:40000

# ==================== 环境配置 ====================
ENVIRONMENT=development
DEBUG=true

# ==================== AI 微服务配置 ====================
# AI 微服务的 URL
AI_SERVICE_URL=http://localhost:8001
# AI 请求超时时间（秒）
AI_SERVICE_TIMEOUT=300
# AI 提供商（gemini, claude, openai）
AI_SERVICE_PROVIDER=gemini

# ==================== DeepSeek (Agent) ====================
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-reasoner
DEEPSEEK_TIMEOUT_MS=300000
DEFAULT_AI_PROVIDER=gemini
